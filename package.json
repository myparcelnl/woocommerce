{
  "name": "@myparcel/woocommerce",
  "version": "5.0.0-alpha.0",
  "private": true,
  "homepage": "https://github.com/myparcelnl/woocommerce#readme",
  "bugs": {
    "url": "https://github.com/myparcelnl/woocommerce/issues"
  },
  "repository": "github:myparcelnl/woocommerce",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "workspaces": [
    "views/**"
  ],
  "scripts": {
    "build": "yarn build:js && yarn translations:import && yarn bundle",
    "build:js": "nx run-many --target=build --output-style=stream",
    "build:js:dev": "nx run-many --target=build:dev --output-style=stream",
    "build:js:dev:backend": "nx run-many --target=build --projects='backend-*'",
    "build:js:dev:frontend": "nx run-many --target=build --projects='frontend-*'",
    "bundle": "pdk-builder build",
    "dev": "nx run-many --target=dev --parallel --output-style=stream",
    "docker:build": "docker build -t myparcelnl/woocommerce .",
    "docker:run": "docker run -it --rm -v $(pwd):/app myparcelnl/woocommerce",
    "docker:run:dev": "docker run -it --rm -v $(pwd):/app myparcelnl/woocommerce:dev",
    "prepare": "is-ci || husky install",
    "test": "nx run-many --target=test --output-style=stream",
    "test:watch": "nx run-many --target=test:watch --output-style=stream",
    "translations:import": "npx -q @edielemoine/google-docs-importer --documentId 1TPE7gwG2GXtX7vlKIaskwMy0Xr4o_ir-lsedWB86xyc -o config/pdk/translations",
    "watch": "nx run-many --output-style=stream --target=build:dev -- --watch",
    "watch:backend": "nx run-many --output-style=stream --projects='backend-*' --target=build:dev -- --watch",
    "watch:frontend": "nx run-many --output-style=stream --projects='frontend-*' --target=build:dev -- --watch",
    "ws:build": "vite build",
    "ws:build:dev": "vite build --mode development",
    "ws:dev": "vite",
    "ws:test": "vitest run",
    "ws:test:watch": "vitest"
  },
  "lint-staged": {
    "*.{ts,vue}": "eslint --fix",
    "*.{md,json,yml,css,scss,html}": "prettier --write",
    "package.json": "npx sort-package-json"
  },
  "prettier": "@myparcel/prettier-config",
  "resolutions": {
    "vite-plugin-dts": "1.7.1"
  },
  "devDependencies": {
    "@edielemoine/google-docs-importer": "^1.0.2",
    "@myparcel-eslint/eslint-config-esnext": "^1.2.0",
    "@myparcel-eslint/eslint-config-node": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript-vue": "^1.2.0",
    "@myparcel-pdk/app-builder": "^1.0.0-alpha.9",
    "@myparcel/semantic-release-config": "^4.2.3",
    "@myparcel/semantic-release-wordpress-readme-generator": "^1.1.0",
    "@types/node": "^18.14.0",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.34.0",
    "eslint-plugin-sort-exports": "^0.8.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.2",
    "nx": "15.7.2",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "packageManager": "yarn@3.4.1"
}
