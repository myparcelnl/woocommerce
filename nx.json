{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "myparcel-woocommerce",
  "defaultBase": "main",
  "workspaceLayout": {
    "appsDir": "views",
    "libsDir": "views"
  },
  "namedInputs": {
    "sharedDefaults": [
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/yarn.lock",
      "{projectRoot}/**/*"
    ],
    "production": [
      "sharedDefaults",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/**/*.snap",
      "!{projectRoot}/**/__tests__/**/*"
    ],
    "test": ["sharedDefaults"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production"],
      "outputs": ["{projectRoot}/lib", "{projectRoot}/dist"]
    },
    "build:dev": {
      "dependsOn": ["^build:dev"],
      "inputs": [
        "production",
        "{workspaceRoot}/node_modules/@myparcel-pdk/**/*"
      ],
      "outputs": ["{projectRoot}/lib", "{projectRoot}/dist"]
    },
    "build:test": {
      "dependsOn": ["^build:test"],
      "inputs": ["test"],
      "outputs": ["{projectRoot}/dist"]
    },
    "test:coverage": {
      "inputs": ["test"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "test:run": {
      "inputs": ["test"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "build:dev",
          "build:test",
          "test:coverage",
          "test:run"
        ],
        "parallel": 10
      }
    }
  }
}
